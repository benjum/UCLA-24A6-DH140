import numpy as np
import matplotlib.pyplot as plt





coin = ['heads','tails']


np.random.choice(coin,
                 p=[0.5, 0.5])


def flipcoin():
    return np.random.choice(coin)


flipcoin()





def flips(n):
    flips = []
    for i in range(n):
        flips.append(flipcoin())
    return flips


print(flips(20))








def countheads(a):
    headcount = 0
    for i in a:
        if i == 'heads':
            headcount += 1
    return headcount


countheads(flips(500))





def coinsamples(numsamples, numflips):
    samples = []
    for i in range(numsamples):
        samples.append(countheads(flips(numflips)))
    return samples


coinsamples(10, 20)


numflips = 300
numsamples = 100
fliparray = coinsamples(numsamples, numflips)
plt.hist(fliparray)
plt.xlim(0,numflips)








def makenorm(n,flips):
    xnums = []
    for i in range(n):
        xnums.append(0)
        for j in range(flips):
            if np.random.choice([1,0]):
                xnums[i] += 1
    plt.hist(xnums, bins=np.arange(-0.5,40.5,1), width=0.8)
    plt.xlim(-0.5,0.5+flips)
    plt.show()

makenorm(100,40)





def makenorm(n,flips,probheads):
    xnums = []
    for i in range(n):
        xnums.append(0)
        for j in range(flips):
            if np.random.choice([1,0],p=[probheads, 1-probheads]):
                xnums[i] += 1
    plt.hist(xnums, bins=np.arange(-0.5,40.5,1), width=0.8)
    plt.xlim(-0.5,0.5+flips)
    plt.show()


makenorm(100,40,0.3)








elems = ['b','w']
